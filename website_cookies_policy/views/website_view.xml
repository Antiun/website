<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>
        <record id="view_company_cookies_form" model="ir.ui.view">
            <field name="name">view.res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Website Cookie" col="4" name="website_cookies">
                            <field name="cookie_text"/>
                    </page>

                </notebook>
            </field>
        </record>

    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/website_cookies_policy/static/src/css/cookies.css"/>
            <script type="text/javascript" src="/website_cookies_policy/static/src/js/cookies.js"></script>
        </xpath>
    </template>

    <template id="menus" inherit_id="website.layout" name="Header EyM">
        <xpath expr="//header" position="inside">
            <div id="bar_cookies" style="display: none;">
                <div class="inner">
                    <p><span t-raw="website.user_id.company_id.cookie_text"/> <a href="" class="ok"><b>OK</b></a> | <a href="#" target="_blank" class="info">More info</a></p>
                </div>
            </div>
        </xpath>
    </template>

</data>
</openerp>