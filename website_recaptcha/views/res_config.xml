<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_website_config_settings_recaptcha"
                model="ir.ui.view">
            <field name="name">Website settings reCaptcha</field>
            <field name="model">website.config.settings</field>
            <field name="inherit_id"
                   ref="website.view_website_config_settings"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[@string='Menu']" position="after">
                        <group string="reCaptcha">
                            <field name="recaptcha_site_key"/>
                            <field name="recaptcha_secret"/>
                        </group>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
